<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitmeister</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fitmeister.styles.css" asp-append-version="true" />
</head>
<header>
<!-- Logo container -->
    <div class="header-logo-container justify-content-center">
        <img src="Images/Logo.png" alt="Fitmeister Logo">
    </div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid justify-content-center">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <!-- Flex container voor de links en rechts uitgelijnde items -->
                <div class="navbar-nav flex-grow-1 justify-content-center">
                    <!-- Centrale links -->
                    <a class="nav-item nav-link" asp-area="" asp-page="/Progression">Progression</a>
                    <a class="nav-item nav-link" asp-area="" asp-page="/FitnessTracker">Fitness</a>
                    <a class="nav-item nav-link" asp-area="" asp-page="/Community">Community</a>
                    <a class="nav-item nav-link" asp-area="" asp-page="/Support">Support</a>
                    
                </div>
                <div class="navbar-nav">
                    <!-- Conditioneel weergegeven links voor authentificatie -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        
                        <form method="post" asp-page="/Logout" class="form-inline">
                            <button type="submit" class="nav-item nav-link btn btn-link">Logout</button>
                        </form>
                        <a class="nav-item nav-link" asp-area="" asp-page="/FoodItemList">foodlist</a>
                    }
                    else
                    {
                        <a class="nav-item nav-link" asp-area="" asp-page="/Login">Login</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/Signup">Signup</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
    <body>
        @RenderBody()
    </body>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Fitmeister - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</html>